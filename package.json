{
  "name": "@financial-times/n-utils",
  "version": "1.0.0",
  "main": "dist/index.js",
  "repository": "git@github.com:Financial-Times/n-utils.git",
  "author": "Zhenyu Lin<zhenyu.lin@ft.com>",
  "license": "MIT",
  "scripts": {
    "lint": "eslint src",
    "watch": "nodemon --watch src -q --exec 'eslint src --fix'",
    "test": "jest",
    "cover": "jest --coverage",
    "prepublish": "make build",
    "prepare": "npx snyk protect || npx snyk protect -d || true",
    "preinstall": "[ \"$INIT_CWD\" != \"$PWD\" ] || npm_config_yes=true npx check-engine"
  },
  "devDependencies": {
    "@financial-times/n-gage": "^9.0.0",
    "babel-cli": "^6.26.0",
    "babel-eslint": "^9.0.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "check-engine": "^1.10.1",
    "coveralls": "^3.0.2",
    "eslint": "^5.5.0",
    "eslint-config-airbnb-base": "13.1.0",
    "eslint-config-prettier": "^3.0.1",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jest": "^21.22.0",
    "eslint-plugin-json": "^1.2.0",
    "eslint-plugin-jsx-a11y": "^6.1.1",
    "eslint-plugin-prettier": "^2.6.2",
    "jest": "^23.5.0",
    "nodemon": "^1.18.4",
    "prettier": "^1.14.2",
    "snyk": "^1.168.0"
  },
  "engines": {
    "node": "12.x",
    "npm": "7.x || 8.x"
  },
  "volta": {
    "node": "12.22.8",
    "npm": "7.24.2"
  },
  "husky": {
    "hooks": {
      "commit-msg": "node_modules/.bin/secret-squirrel-commitmsg",
      "pre-commit": "make lint && node_modules/.bin/secret-squirrel",
      "pre-push": "make lint unit-test && make verify -j3"
    }
  }
}
